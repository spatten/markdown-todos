{
  "name": "markdown-todos",
  "displayName": "markdown-todos",
  "description": "Top-level TODO and DONE on your markdown headers",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.64.0"
  },
  "license": "MIT",
  "repository": "https://github.com/spatten/markdown-todos",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:markdown-todos.increaseTodo",
    "onCommand:markdown-todos.decreaseTodo",
    "onCommand:markdown-todos.openCurrentWorklog",
    "onCommand:markdown-todos.gotoPreviousHeader",
    "onCommand:markdown-todos.gotoNextHeader"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "injectTo": [
          "text.html.markdown"
        ],
        "scopeName": "markdown-todos.todo",
        "path": "./syntaxes/markdown_todo.json"
      },
      {
        "injectTo": [
          "text.html.markdown"
        ],
        "scopeName": "markdown-todos.done",
        "path": "./syntaxes/markdown_done.json"
      }
    ],
    "commands": [
      {
        "command": "markdown-todos.increaseTodo",
        "title": "increase markdown TODO level"
      },
      {
        "command": "markdown-todos.decreaseTodo",
        "title": "decrease markdown TODO level"
      },
      {
        "command": "markdown-todos.openCurrentWorklog",
        "title": "open the current markdown worklog"
      },
      {
        "command": "markdown-todos.gotoPreviousHeader",
        "title": "go to previous header in a markdown document"
      },
      {
        "command": "markdown-todos.gotoNextHeader",
        "title": "go to next header in a markdown document"
      }
    ],
    "keybindings": [
      {
        "command": "markdown-todos.increaseTodo",
        "key": "shift+right",
        "mac": "shift+right",
        "when": "editorTextFocus && !editorReadonly && editorLangId == markdown"
      },
      {
        "command": "markdown-todos.decreaseTodo",
        "key": "shift+left",
        "mac": "shift+left",
        "when": "editorTextFocus && !editorReadonly && editorLangId == markdown"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.64.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "typescript": "^4.5.5",
    "@vscode/test-electron": "^2.1.2"
  }
}
